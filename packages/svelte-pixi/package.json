{
  "name": "svelte-pixi",
  "version": "0.0.5",
  "description": "Create Pixi.js apps with Svelte 3",
  "repository": "https://github.com/mattjennings/svelte-pixi",
  "author": "Matt Jennings",
  "license": "MIT",
  "svelte": "dist/index.js",
  "main": "dist/index.js",
  "types": "dist/ts/index.d.ts",
  "scripts": {
    "validate": "svelte-check --threshold error --ignore \"dist\"",
    "build": "npm run validate && NODE_ENV=production node scripts/build.js",
    "dev": "node scripts/build.js",
    "prepublishOnly": "npm run build",
    "publish:prod": "npm publish --tag latest",
    "publish:next": "npm publish --tag next"
  },
  "peerDependencies": {
    "pixi.js": "^6.2.0"
  },
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "devDependencies": {
    "@tsconfig/svelte": "^1.0.10",
    "chokidar": "^3.5.1",
    "esbuild": "^0.11.20",
    "fs-extra": "^10.0.0",
    "glob": "^7.1.7",
    "kleur": "^4.1.4",
    "nodemon": "^2.0.6",
    "pixi.js": "^5.3.3",
    "svelte": "^3.24.0",
    "svelte-check": "^1.5.2",
    "svelte-preprocess": "^4.7.3",
    "typescript": "^4.0.3"
  },
  "keywords": [
    "svelte"
  ],
  "dependencies": {
    "tslib": "^2.0.3"
  }
}
